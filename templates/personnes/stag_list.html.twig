{% extends 'base.html.twig' %}

{% block title %}Liste des stagiaires{% endblock %}

{% block body %}
<main>
<div id="wrapper-main">
    <table class="uk-table uk-table-striped uk-table-middle">
        <thead>
            <th>Prénom</th>
            <th>Nom</th>
        </thead>
        <tbody>
            {% for stagiaire in stagiaires %}
                <tr>
                    <td>{{ stagiaire.prenom }}</td>
                    <td>{{ stagiaire.nom }}</td>
                    <td><a href="{{ path('stagiaire_show', {'id':stagiaire.id}) }}"><i class="fas fa-list-ul"></i></a></td>
                    {% if is_granted('ROLE_USER') %}
                    <td>Futurs outils de modération</td>
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</main>

{% endblock %}