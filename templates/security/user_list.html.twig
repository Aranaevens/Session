{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
<main>
<div id="wrapper-main">
    <table class="uk-table uk-table-striped uk-table-middle">
        <thead>
            <th>Email</th>
            <th>Role</th>
            <th class="uk-width-1-6">Outils</th>
        </thead>
        <tbody>
            {% for utilisateur in users %}
                <tr>
                    <td>{{ utilisateur.email }}</td>
                    <td>{% for role in utilisateur.roles %}
                            {{ role ~ " " }}
                        {% endfor %}
                    </td>
                    <td class="uk-width-1-6"><a href="{{ path('user_edit', {'id':utilisateur.id}) }}"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('user_delete', {'id':utilisateur.id}) }}"><i class="fas fa-times"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a class="uk-button uk-button-default uk-button-large" href="{{ path('user_add') }}">Nouveau</a>
</div>
</main>

{% endblock %}